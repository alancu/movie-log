<!--
    Layout per a l'element d'usuari del menú de la toolbar.
    S'utilitza per mostrar la foto de perfil circular de l'usuari en la barra superior (toolbar).
    No és un menú "normal", sinó un layout per a una acció personalitzada al menú.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingEnd="24dp">

    <ImageView
        android:id="@+id/image_user_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/profile_picture"
        android:background="@drawable/circle_background"
        android:src="@drawable/ic_user" />
</LinearLayout>
